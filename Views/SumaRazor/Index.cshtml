@model Lab03_MVC_Jarro_B.Models.ClsSuma
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sumadora</title>
   
</head>
<body>
    <div class="container">
        <h1>Suma de 2 Números</h1>
        @using (Html.BeginForm("CalcularSuma", "SumaRazor", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Valor 1:")
                @Html.EditorFor(model => model.valor1, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.Label("Valor 2:")
                @Html.EditorFor(model => model.valor2, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <input type="submit" value="Calcular" />
            </div>
        }
    </div>
</body>
</html>
